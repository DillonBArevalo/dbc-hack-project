<%= form_for(@user) do |f| %>
 	<%= f.label :name %>:
  <%= f.text_field :name %><br />

 	<%= f.label :phone %>:
 	<%= f.text_field :phone %><br />

 	<%= f.label :email %>:
  <%= f.text_field :email%><br />

 	<%= f.label :password %>:
 	<%= password_field_tag :password%><br />

 	<%= f.submit %>
<% end %>