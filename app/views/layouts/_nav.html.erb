<nav class="nav-wrapper" role="navigation" style="background-color: #c7d8c6; color:black;">
   <ul id="nav" class="left">
   <div class="row">
     <% if current_user %>

       <li>
         <%= link_to('Hi, '+ current_user.username, user_path(current_user))  %>
       </li>

     <% end %>

       <li>
         <%= link_to('Home', root_path) %>
       </li>

     <% if !current_user %>

       <li>
         <%= link_to('Register', new_user_path)%>
       </li>
       <li>
         <%= form_for(:session, url: login_path, method: :post) do |f| %>
          <div class="col s4" style="color: black;"><%= f.text_field :email, placeholder: 'Email' %></div>
          <div class="col s4"><%= f.text_field :password, placeholder: 'Password' %></div>
          <div class="col s4"><%= f.submit value: 'Login' %></div>
         <% end %>
       </li>

     <% else%>


      
       <li><%= link_to "Logout", logout_path %></li>
       

     <% end %>
    </div>
   </ul>
 </nav>


 